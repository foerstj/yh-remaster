	  f scroll_rate = 6.500000;
	}
}
[conversation_trini]
{
	[text*]
	{
		order = 0;
		choice = more;
		screen_text = "Where did you come from? Through the snows? I didn't see you a second ago.\n\nCurse this endless blizzard, I must be going blind from it.";
	  f scroll_rate = 6.500000;
	}
	[text*]
	{
		screen_text = "Say, you didn't see any cattle on your way here, did you? My poor old cows were scattered to the winds when this storm started. Lost them all, out in the snow. Gaah! Curse this cold!";
	  f scroll_rate = 6.500000;
	}
}