	[text*]
	{
		screen_text = "You made it out alive!\n\nWhatever you did, the Fire King must be terribly mad. It is becoming hotter and drier with every passing moment. The well has all but dried up already, and everyone is gathering to see what we should do. I hope you have good news for us, we could use it.";
	  f scroll_rate = 6.500000;
	}
}
[conversation_trini_well]
